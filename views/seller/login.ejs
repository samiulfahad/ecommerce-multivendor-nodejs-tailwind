<!DOCTYPE html>
<html lang="en">
  <%- include('../includes/head.ejs')%>
  <link rel="stylesheet" href="/css/tailwind.css">
  <body>
    <%- include('../includes/userNav.ejs') %>
    <!-- Seller Login Form -->
    <section>
        <div class="w-96 mt-28 mx-auto rounded-lg shadow-lg">
            <form action="/seller/login" class="flex flex-col justify-center items-center px-10 py-10 bg-indigo-100" method="POST">
                <h3 class="text-center font-bold text-xl ">Merchant Login Portal</h3>
                <% if (errorMessage) { %>
                    <p class="text-center font-bold text-red-500"><%= errorMessage %></p>
                <% } %>
                <% if (success) { %>
                    <p class="text-center font-bold text-green-500"><%= success %></p>
                <% } %>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="flex justify-start items-center space-x-3 mt-8">
                    <p class="material-symbols-outlined">email</p>
                    <input type="email" name="email" id="email" value="<%= oldData.email %>" placeholder="Merchant Email" class="py-1 w-full pl-2 focus:outline-none">
                </div>

                <div class="flex justify-start items-center space-x-3 mt-4">
                    <p class="material-symbols-outlined">lock</p>
                    <input type="password" name="password" id="password" value="<%= oldData.password %>" placeholder="Password" class="py-1 w-full pl-2 focus:outline-none">
                </div>
                <button type="submit" class="text-lg w-full px-4 py-1 mt-4 rounded-md hover:bg-cyan-400 text-white bg-cyan-700">Login</button>
                <div class="flex justify-between space-x-10 mt-4 underline underline-offset-4">
                    <a href="/seller/signup" class="hover:text-gray-400">Become a Merchant</a>
                    <a href="/seller/reset-password" class="hover:text-gray-400">Forgot Password</a>
                </div>
                <a href="/login" class="pt-4 font-bold underline underline-offset-2">Back to Customer Login page</a href="#">
            </form>
        </div>
    </section>
  </body>
</html>
