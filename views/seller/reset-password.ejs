<!DOCTYPE html>
<html lang="en">
  <%- include('../includes/head.ejs')%>
  <body>
    <%- include('../includes/userNav.ejs') %>
    
    <!-- Reset Password (Seller) -->
    <section>
        <div class="mt-28 flex flex-col justify-between items-center mx-auto p-10 w-96 shadow-lg bg-gray-300">
            <h3 class="text-center font-bold text-xl">Seller Account Password Recovery</h3>
            <form action="/seller/reset-password" method="POST" class="flex flex-col justify-start items-start pt-10">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <% if (errorMessage) { %>
                    <p class="font-bold text-center text-red-500"> <%= errorMessage %> </p>
                <% } %>
                <label for="email">
                    <p>Email</p>
                    <input type="email" name="email" id="email" value="<%= oldEmail %>" placeholder="Enter you Email" class="text-centerr px-4 w-56 py-2 focus:outline-none">
                </label>
                <button type="submit" class="px-6 py-2 text-center font-bold bg-slate-500 hover:bg-slate-400 text-white mx-auto mt-6">Send Reset Email</button>
            </form>
        </div>
    </section>
  </body>
</html>
