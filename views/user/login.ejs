<!DOCTYPE html>
<html lang="en">
  <%- include('../includes/head.ejs')%>
  <body>
    <%- include('../includes/userNav.ejs') %>
      <section>
        <div class="w-96 mt-28 mx-auto rounded-lg shadow-lg">
            <form action="/login" class="flex flex-col justify-center items-center px-10 py-10 bg-indigo-100" method="POST">
                <h3 class="text-center font-bold text-xl ">Login</h3>
                <% if (errorMessage) { %>
                    <p class="text-center font-bold text-red-500"><%= errorMessage %></p>
                <% } %>
                <% if (success) { %>
                    <p class="text-center font-bold text-green-500"><%= success %></p>
                <% } %>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                
                <div class="flex justify-start items-center space-x-3 mt-8">
                    <p class="material-symbols-outlined">email</p>
                    <input type="email" name="email" id="email" value="<%= oldData.email %>" placeholder="Email" class="py-1 w-full pl-2 focus:outline-none">
                </div>

                <div class="flex justify-start items-center space-x-3 mt-4">
                    <p class="material-symbols-outlined">lock</p>
                    <input type="password" name="password" id="password" value="<%= oldData.password %>" placeholder="Password" class="py-1 w-full pl-2 focus:outline-none">
                </div>
                
                <!-- <label for="email">
                    <p class="text-lg pb-2">Email</p>
                    <input type="email" name="email" id="email" value="<%= oldData.email %>" class="w-72 px-6 text-left py-4 rounded-lg focus:outline-none">
                </label> -->
                <!-- <label for="password">
                    <p class="text-lg pb-2">Password</p>
                    <input type="password" name="password" id="password" value="<%= oldData.password %>" class="w-72 px-6 text-left py-4 rounded-lg focus:outline-none">
                </label> -->
                <button type="submit" class="text-lg w-full px-4 py-1 mt-4 rounded-md hover:bg-cyan-400 text-white bg-cyan-700">Login</button>
                <div class="flex justify-between space-x-16 mt-4 underline underline-offset-4">
                    <a href="/signup" class="hover:text-gray-400">Open an account</a>
                    <a href="/reset-password" class="hover:text-gray-400">Forgot Password</a>
                </div>
                <a href="/seller/login" class="text-sm px-2 py-1 mt-4 border border-black bg-gray-300">Merchant Login</a>
            </form>
        </div>
    </section>
  </body>
</html>
